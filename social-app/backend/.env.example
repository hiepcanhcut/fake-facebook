# Backend Environment Variables Template
# Copy this as .env in the backend folder OR use the root .env

# Database
DATABASE_URL="postgresql://admin:adminpassword@localhost:5432/social_db?schema=public"

# JWT Secrets (Change these in production!)
JWT_ACCESS_SECRET="super-secret-access-key-change-me"
JWT_ACCESS_EXPIRATION="15m"
JWT_REFRESH_SECRET="super-secret-refresh-key-change-me"
JWT_REFRESH_EXPIRATION="7d"

# Storage (MinIO)
MINIO_ENDPOINT="localhost"
MINIO_PORT=9000
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_BUCKET="social-media-uploads"
MINIO_USE_SSL=false

# Server
NODE_ENV="development"
PORT=3001
CORS_ORIGIN="http://localhost:3000"

# Redis (Optional, for caching)
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""

# Logging
LOG_LEVEL="debug"

# Email (Optional, for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="noreply@socialapp.com"
