# Frontend Environment Variables Template
# These variables are exposed to the browser (must start with NEXT_PUBLIC_)

# API Configuration
NEXT_PUBLIC_API_URL="http://localhost:3001/api"
NEXT_PUBLIC_SOCKET_URL="http://localhost:3001"

# Feature Flags (Optional)
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_BETA_FEATURES=false

# App Configuration
NEXT_PUBLIC_APP_NAME="Social App"
NEXT_PUBLIC_APP_DESCRIPTION="A modern social media platform"

# Storage
NEXT_PUBLIC_MINIO_ENDPOINT="http://localhost:9000"
NEXT_PUBLIC_MINIO_BUCKET="social-media-uploads"
